<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.amany.eng.com.myglobalapplication.Write_Poster_Activity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:src="@drawable/close"

            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="كتابة منشور "
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/resha"
            />


    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </view>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="124dp"
            android:layout_height="42dp"
            android:text="وظيفة"
            android:textSize="24dp"
            android:textColor="#424242"
            tools:layout_editor_absoluteX="259dp"
            tools:layout_editor_absoluteY="47dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:text="طلب"
            android:textSize="24dp"
            android:textColor="#424242"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="132dp"
            android:layout_height="45dp"
            android:text="سؤال"
            android:textSize="24dp"
            android:textColor="#00C853"
            tools:layout_editor_absoluteY="44dp"
            tools:layout_editor_absoluteX="4dp" />

    </LinearLayout>




    <view
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </view>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        android:id="@+id/relativeLayout2">
    </RelativeLayout>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:text="ماالذي تحب ان تسال عنه؟"
        android:textStyle="bold"
        android:background="#EEEEEE"
        android:layout_toRightOf="@+id/relativeLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="0.73" />


    <view
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </view>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:weightSum="1">


    <Button
        android:id="@+id/botton"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:text="اضافة صورة"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignParentTop="true"
        android:background="#fff"

        />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#E0E0E0"
            android:src="@drawable/img"
            android:layout_weight="0.36" />



        <Button
        android:id="@+id/button17"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="اضافة مدينة"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#fff"
         />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/place"
            android:layout_weight="0.36" />
    </LinearLayout>
</LinearLayout>
</ScrollView>