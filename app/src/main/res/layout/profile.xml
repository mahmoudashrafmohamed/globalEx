<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.amany.eng.com.myglobalapplication.Profile">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/am"
            />

        <LinearLayout
            android:gravity="right|bottom"
            android:layout_gravity="bottom"
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_gravity="right"
                android:layout_height="50dp"
                android:src="@drawable/aw"
                android:id="@+id/img_circle_myProfile"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"
                />
        </LinearLayout>
    </FrameLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعديل الحساب"
        android:background="@null"
        android:textColor="#f00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="right"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text=" اماني عبدالله"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" مطورة برامج"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="هذا النص يمكن استبدله بما ترغب"
            android:textStyle="bold"
            android:textColor="#BF360C"

            />
    </LinearLayout>



    <LinearLayout
        android:gravity="right"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/lin44">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="غزة-فلسطين"
                    android:textSize="15sp"
                     />
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:layout_height="100dp"
            android:id="@+id/img_c"
            android:src="@drawable/place"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff" />
    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/li">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/name_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.fiverr.com"
                    android:textColor="#26C6DA"
                    android:textSize="15sp"
                     />
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:layout_height="100dp"
            android:id="@+id/im5"
            android:src="@drawable/link"
            app:civ_border_color="#fff" />
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/li1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/name3_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30/6/1994"
                    android:textSize="15sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_gravity="right"
            android:layout_height="100dp"
            android:id="@+id/im"
            android:src="@drawable/date"
            app:civ_border_color="#fff" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/li2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


            <Button
            android:id="@+id/botton2"
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:text="ردود"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/button17"
            android:layout_alignParentTop="true"
            android:background="#fff"

            />


        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="122"
            android:id="@+id/answer"
            android:textStyle="bold"
            android:layout_weight="0.36" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="منشور"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#fff"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="20"
            android:id="@+id/post"
            android:textStyle="bold"
            android:layout_weight="0.36" />
    </LinearLayout>
            </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="317dp"
        android:layout_gravity="bottom">


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/nav_item_state_list"
            app:itemTextColor="@color/nav_item_state_list"
            app:menu="@menu/bottom_nav_menu" />
    </FrameLayout>


</LinearLayout>


</LinearLayout>



</ScrollView>












